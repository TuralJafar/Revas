@using Revas.Models;
﻿

@model List<Employee>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">
        
        <div class="card-body">
            
            <h4 class="card-title">Employees</h4>
           <div class=" "><a asp-controller="employee" asp-action="create" class="btn btn-success">Create Employee</a></div>
            <div class="table-responsive">
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Surname
                            </th>
                            <th>
                               Position
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee item in Model)
                        {
                            count++;
                            <tr>

                                <td>
                                   @count
                                </td>

                                <td>
                                   @item.Name
                                </td>
                                
                                <td>
                                    @item.Position.Name
                                </td>
                                  
                                <td>
                                    <a asp-action="update" asp-controller="employee" asp-route-id="@item.Id" class="btn btn-warning "><i class="mdi mdi-pencil-box"></i></a>

                                    <a asp-action="delete" asp-controller="employee" asp-route-id="@item.Id" class="btn btn-danger "><i class="mdi mdi-delete"></i></a>

                                    <a class="btn btn-primary "><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>